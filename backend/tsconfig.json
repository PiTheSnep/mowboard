{
	"extends": "../tsconfig.json",

	"references": [{ "path": "../shared" }],

	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",

		"baseUrl": "./src",
		"paths": {
			"~/*": ["src/*"]
		},

		"typeRoots": ["node"]
	},

	"include": ["src/**/*.*"],
	"exclude": ["../node_modules/@types/react-native"]
}
