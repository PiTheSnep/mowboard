{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",

		"baseUrl": "./src",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*",
		"src/models/Guild.ts",
		"src/models/index.ts",
		"src/models/Infraction.ts",
		"src/models/User.ts"
	],
	"exclude": ["node_modules", "dist"]
}
