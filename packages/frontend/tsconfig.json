{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"target": "ESNext",

		"outDir": "./dist/",
		"jsx": "react",

		"baseUrl": "./src",

		"paths": {
			"@layout/*": ["./layout/*"],
			"@pages/*": ["./pages/*"],
			"@theme/*": ["./theme/*"],
			"~/*": ["./*"]
		},

		"esModuleInterop": true
	},
	"include": ["./src/**/*"],
	"exclude": ["../node_modules/@types/react-native/**"]
}
